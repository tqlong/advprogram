#include <iostream>
#include <cmath>

using namespace std;

double cal2Func(string s, double a);
double cal3Func(double a, double b, char op);
void err(int a);

int main(int argc, char* argv[]) {
    if (argc == 3) {
        string s = argv[1];
        double a = atof(argv[2]);
        cout << cal2Func(s, a);
    }
    else if (argc == 4) {
        double a = atof(argv[1]), b = atof(argv[2]);
        char op = argv[3][0];
        cout << cal3Func(a, b, op);
    }
    return 0;
}

double cal2Func(string s, double a) {
    if (s == "sin")
        return sin(a);
    else if (s == "cos")
        return cos(a);
    else if (s == "tan")
        return tan(a);
    else if (s == "cot") {
        if (tan(a)== 0) err(1);
        else return 1.0/tan(a);
    }
    else if (s == "sqrt") {
        if (a < 0) err(1);
        else return sqrt(a);
    }
    else
        err(2);
    return 0;
}

double cal3Func(double a, double b, char op){
    if (op == '+')
        return a + b;
    else if (op == '-')
        return a - b;
    else if (op == 'x')
        return a * b;
    else if (op == '/') {
        if (b == 0) err(1);
        else return a / b;
    }
    else
        err(2);
    return 0;
}

void err(int a) {
    if (a == 1) {
        cout << "Tham so nhap vao khong hop le";
        exit(1);
    }
    else if (a == 2) {
        cout << "Ham chua duoc dinh nghia";
        exit(2);
    }
}
